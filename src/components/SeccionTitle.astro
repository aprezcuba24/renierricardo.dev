---
interface Props {
  title: string;
  class?: string;
}

const { title, class: classProps } = Astro.props;
const parts = title.split("");
const length = 3;
const fristPart = parts.slice(0, length).join("");
const secondPart = parts.slice(length).join("");
const baseClass = "w-full flex mb-2";
const className = classProps ? `${classProps} ${baseClass}` : baseClass;
---

<div class={className}>
  <h2 class="text-2xl font-bold">
    <span class="text-red-500">{fristPart}</span>{secondPart}
  </h2>
  <div class="w-full pt-6 pl-1">
    <div class="w-full border-solid border-b-2 border-black"></div>
  </div>
</div>
