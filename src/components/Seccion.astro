---
import Label from "./Label.astro";

interface Props {
  title: string;
  subTitle: string;
  place?: string;
  date?: string;
}
const { title, subTitle, place, date } = Astro.props;
---

<div class="text-sm flex justify-between mb-4">
  <div>
    <Label class="mb-1" label={title} />
    <p class="uppercase">{subTitle}</p>
  </div>
  <div class="text-right">
    <p class="text-red-500">{place}</p>
    <p class="text-gray-600">{date}</p>
  </div>
</div>
