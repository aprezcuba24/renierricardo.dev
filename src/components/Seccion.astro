---
import Label from "./Label.astro";

interface Props {
  title: string;
  subTitle: string;
  place?: string;
  date?: string;
  items?: string[];
  class?: string;
}
const { title, subTitle, place, date, items, class: classProps } = Astro.props;
const baseClass = "text-sm flex justify-between mb-4";
const className = classProps ? `${baseClass} ${classProps}` : baseClass;
---

<div class={className}>
  <div>
    <Label class="mb-1" label={title} />
    <p>{subTitle}</p>
    {
      items && (
        <ul class="list-disc pl-3">
          {items.map((item) => (
            <li class="text-gray-600">{item}</li>
          ))}
        </ul>
      )
    }
  </div>
  <div class="text-right">
    <p class="text-red-500">{place}</p>
    <p class="text-gray-600">{date}</p>
  </div>
</div>
