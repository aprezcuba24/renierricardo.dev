---
import Label from "./Label.astro";

interface Props {
  title: string;
  subTitle: string;
  place?: string;
  date?: string;
  items?: string[];
}
const { title, subTitle, place, date, items } = Astro.props;
---

<div class="text-sm flex justify-between mb-4">
  <div>
    <Label class="mb-1" label={title} />
    <p class="uppercase">{subTitle}</p>
    {
      items && (
        <ul class="list-disc pl-3">
          {items.map((item) => (
            <li class="text-gray-600">{item}</li>
          ))}
        </ul>
      )
    }
  </div>
  <div class="text-right">
    <p class="text-red-500">{place}</p>
    <p class="text-gray-600">{date}</p>
  </div>
</div>
